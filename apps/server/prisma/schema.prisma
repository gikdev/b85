// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model Link {
  id          Int     @id @default(autoincrement())
  name        String  @db.VarChar(50)
  originalUrl String  @db.VarChar(255)
  shortCode   String  @unique @db.VarChar(50)
  clicks      Click[]

  @@map("links")
}

model Click {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  link      Link     @relation(references: [id], fields: [linkId], onDelete: Cascade, onUpdate: Cascade)
  linkId    Int

  @@map("clicks")
}
