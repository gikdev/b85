{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "dialog:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "pnpm", "cmd": "pnpm" },
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": ["-NoProfile", "-Command"]
        }
      ]
    }
  ]
}
